---
import Layout from '../layouts/Layout.astro'
import TFlex from '../components/TFlex.vue'
import OIntro from '../components/OIntro.vue'
import OSelfDescription from '../components/OSelfDescription.vue'
import OFloatingNav from '../components/OFloatingNav.vue'
import OLanguages from '../components/OLanguages.vue'
import OCurriculum from '../components/OCurriculum.vue'
import OFreelanceReferences from '../components/OFreelanceReferences.vue'
import OTechStack from '../components/OTechStack.vue'
import OArcsSection from '../components/OArcsSection.vue'
import OScrollSnapSection from '../components/OScrollSnapSection.vue'
import AGithubCTA from '../components/AGithubCTA.vue'
import { NavLink } from '../types/website'

const links: NavLink[] = [
  {
    label: 'Intro',
    target: 'intro'
  },
  {
    label: 'Description',
    target: 'description'
  },
  {
    label: 'Curriculum',
    target: 'curriculum'
  },
  {
    label: 'Techstack',
    target: 'techstack'
  },
  {
    label: 'Languages',
    target: 'languages'
  },
  {
    label: 'Freelance',
    target: 'freelance'
  },
  {
    label: 'OPen Source',
    target: 'open-source'
  }
]
---

<Layout>
  <TFlex column={true}>
    <OFloatingNav links={links}/>

    <OIntro id="intro"/>

    <OSelfDescription id="description"/>

    <hr>

    <OCurriculum id="curriculum"/>

    <hr>

    <OTechStack id="techstack"/>

    <OLanguages id="languages"/>

    <hr>

    <OFreelanceReferences id="freelance"/>

    <hr>

    <h2 id="open-source">Open Source Projects</h2>

    <OArcsSection/>

    <hr>

    <OScrollSnapSection/>

    <hr>

    <AGithubCTA/>
  </TFlex>
</Layout>
