---
import Layout from '../layouts/Layout.astro'
import TFlex from '../components/TFlex.vue'
import OIntro from '../components/OIntro.vue'
import OSelfDescription from '../components/OSelfDescription.vue'
import OFloatingNav from '../components/OFloatingNav.vue'
import OLanguages from '../components/OLanguages.vue'
import OCurriculum from '../components/OCurriculum.vue'
import OFreelanceReferences from '../components/OFreelanceReferences.vue'
import OTechStack from '../components/OTechStack.vue'
import OOpenSourceSection from '../components/OOpenSourceSection.vue'
import AGithubCTA from '../components/AGithubCTA.vue'
import QNoPrint from '../components/QNoPrint.vue'
import { NavLink } from '../types/website'

const links: NavLink[] = [
  {
    label: 'Intro',
    target: 'intro'
  },
  {
    label: 'Description',
    target: 'description'
  },
  {
    label: 'Curriculum',
    target: 'curriculum'
  },
  {
    label: 'Techstack',
    target: 'techstack'
  },
  {
    label: 'Languages',
    target: 'languages'
  },
  {
    label: 'Freelance',
    target: 'freelance'
  },
  {
    label: 'Open Source',
    target: 'open-source'
  }
]
---

<Layout>
  <TFlex
    column={true}
    spacious={true}
  >
    <OFloatingNav links={links}/>

    <OIntro id="intro"/>

    <OSelfDescription id="description"/>

    <hr>

    <OCurriculum id="curriculum" primary={true}/>

    <QNoPrint>
      <hr>

      <div slot="yes">
        <p>Barthy Bonhomme: page 2 of 3</p>
      </div>
    </QNoPrint>

    <OCurriculum />

    <QNoPrint>
      <hr>

      <div slot="yes">
        <p>Barthy Bonhomme: page 3 of 3</p>
      </div>
    </QNoPrint>

    <OTechStack id="techstack"/>

    <OLanguages id="languages"/>

    <QNoPrint>
      <hr>

      <OFreelanceReferences id="freelance"/>

      <hr>

      <OOpenSourceSection id="open-source"/>

      <hr>

      <AGithubCTA/>
    </QNoPrint>
  </TFlex>
</Layout>
